<div class = "question-container" id = "<%=@question.id%>">
<div class="sidebar">
  <button id="upvote">
  	<i class="fa fa-chevron-up" aria-hidden="true"></i>
  </button>

  <span class="points"><%= @question.vote_count %></span>

  <button id="downvote">
    <i class="fa fa-chevron-down" aria-hidden="true"></i>
  </button>

</div>

<div class = "question-detail">
  <h3><%= @question.title %>&nbsp&nbsp<a href="/questions/<%= @question.id %>/comment/new">Comment on this question!</a></h3>
  <p><%= @question.description %></p>
</div>
</div>
<div class = "question-clear"></div>

<% @question.comments.to_a.each do |comment| %>
  <div class="sidebar">

  </div>

  <div class = "comment-detail">
    <p>
        <%= comment.description %>
      </p>
      <p class = "user_timestamp_container">
      <span>
        <%= User.find(comment.user_id).user_name %>
      </span>
    </p>
  </div>
  <%end%>
<% @answers.to_a.each do |answer| %>
  <% if answer.best_answer == 1 %>
    <% @best_answer_selected = true %>
  <% end %>
<% end %>

<% @answers.to_a.each do |answer| %>
  <div class="sidebar">

  <% if answer.best_answer == 1 %>
    <span class = "best-answer">
      <i class="fa fa-check" aria-hidden="true"></i>
    </span>
  <% else %>
    <span class = "best-answer" style="display:none">
      <i class="fa fa-check" aria-hidden="true"></i>
    </span>
  <% end %>

  </div>

  <div class = "answer-detail">
    <p>
        <%= answer.description %>&nbsp&nbsp<a href="/answers/<%= answer.id %>/comment/new">Comment on this answer</a>
      </p>
      <p class = "user_timestamp_container">
      <span>
        <%= answer.user.user_name %>
      </span>
    </p>
  </div>
  <% if @question.user_id == session[:user_id] && !@best_answer_selected %>
  <!-- need to implement a javascript function below that hides the button and sets best_answer -->
    <button type="submit" name="best_answer" onclick=''>>BEST ANSWER</button>
  <% end %>

  <% answer.comments.to_a.each do |comment| %>
    <div class="sidebar">

    </div>

    <div class = "comment-detail">
      <p>
          <%= comment.description %>
        </p>
        <p class = "user_timestamp_container">
        <span>
          <%= User.find(comment.user_id).user_name %>
        </span>
      </p>
    </div>
  <%end%>

  <!-- ends loop -->
  <% end %>


<%if session[:user_id]%>
  <div class="answer-text-box">
    <form method="post" action="/question/<%= @question.id %>/answers">
      <textarea name="answertext" cols="50" rows="5" placeholder="Your answer..."></textarea>
      <input type="submit" value="Post your Answer">
    </form>
  </div>
<%end %>







