<p>
<%if !session[:user_id]%>
  <div class="register">
    <form action="/register" method="post">
      <input type="text" name="user[user_name]" placeholder="Username">
      <input type="password" name="password" placeholder="Password">
      <input type="submit" value="Register" class="blue-button">
    </form>
  </div>
<%end%>
  <% if @errors %>
    <span>Something went wrong:</span>
    <ul class="error-list">
      <% @errors.each do |error| %>
        <li class="error-item"><%= error %></li>
      <% end %>
    </ul>
  <% end %>
</p>

<h2>Questions:</h2>
<p><a href="/questions/new">Ask a Question</a></p>

<div class='question-container'>
  <% @questions.each_with_index do |iteration_question, i| %>
    <%= erb(:_question_template, locals: {question: iteration_question, i: i}) %>
  <% end %>
</div>
